{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["assets/*"],
      "@services/*": ["services/*"],
      "@navigation/*": ["navigation/*"],
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@screens/*": ["screens/*"],
      "@theme/*": ["theme/*"],
      "@hooks/*": ["hooks/*"],
      "@redux/*": ["redux/*"],
      "@api/*": ["api/*"]
    }
  }
}
